@model List<Category>;

<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary-light">
                Category List
            </h2>
        </div>

        <div class="col-6  text-end">
            <a asp-controller="category" asp-action="Add" class="btn btn-primary"><i class="bi bi-journal-plus"></i> Create New Category</a>
        </div>
    </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>id</th>
            <th>category name</th>
            <th>displayOrder</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model){
            <tr>
                <td>@obj.Id</td>
                <td>@obj.Name</td>
                <td>@obj.DisplayOrder</td>
            </tr>
        }
    </tbody>
    

</table>